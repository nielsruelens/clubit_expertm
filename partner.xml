<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">view.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="reference"/>
                </field>
            </field>
        </record>

        <record id="view_partner_accounting_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_payable']" position="after">
					<field name="invoice_account_payable"/>
				</xpath>
                <xpath expr="//field[@name='property_account_receivable']" position="after">
					<field name="invoice_account_receivable"/>
				</xpath>
            </field>
        </record>
    </data>
</openerp>